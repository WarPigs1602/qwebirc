/* Kompakte, lesbare Tabbar - ohne Rahmen und Schatten */
.qwebirc-qui .tabbar {
  font-size: 0.85em;
  color: $(tabbar_text);
  margin-left: 25px;
  line-height: 22px;
  display: flex;
  gap: 4px;
  align-items: center;
  background: #232634;
  border-radius: 8px;
  box-shadow: none;
  padding: 0 8px 0 8px;
  min-height: 26px;
  height: 26px;
  border: none;
}

/* Kompakte, lesbare Tabs */
.qwebirc-qui a.tab {
  border: 1px solid $(tab_border);
  padding: 2px 10px;
  cursor: pointer;
  border-radius: 6px;
  margin-right: 0;
  white-space: nowrap;
  text-decoration: none;
  color: $(tab_text);
  background: transparent;
  transition: background 0.15s, color 0.15s, border 0.15s, box-shadow 0.15s;
  font-weight: 500;
  font-size: 0.95em;
  box-shadow: 0 1px 2px #0001;
  position: relative;
  outline: none;
  height: 22px;
  display: flex;
  align-items: center;
}

/* Hover effect for tabs */
.qwebirc-qui .tab:hover, .qwebirc-qui a.tab:focus {
  background: #2a2d3a;
  border: 1.5px solid #7a6ff0;
  color: #b3d4fc;
  box-shadow: 0 2px 8px #0003;
}

/* Aktiver Tab */
.qwebirc-qui .tab-selected {
  background: linear-gradient(90deg, #3a3f4b 0%, #232634 100%);
  border: 1.5px solid #7a6ff0;
  border-radius: 8px;
  color: #fff;
  box-shadow: 0 4px 16px #0005;
  font-weight: 600;
  z-index: 2;
  position: relative;
}

.qwebirc-qui div.input {
  border-top: 1px solid $(input_border);
  padding-left: 3px;
  padding-right: 3px;
}

/* Close tab: modern SVG icon instead of X */
/* Close tab: minimalistic, without border and shadow */
.qwebirc-qui .tabclose {
  margin-left: 5px;
  line-height: 1;
  vertical-align: middle;
  padding-left: 3px;
  border-radius: 3px;
  font-weight: normal;
  color: #e05c5c; /* explicit default color for the X */
  width: 18px;
  height: 18px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background: none;
  border: none;
  box-shadow: none;
  transition: background 0.15s;
  position: relative;
  flex: 0 0 auto; /* verhindert Schrumpfen */
}
.qwebirc-qui .tabclose:hover {
  background: #2a2d3a;
}
/* SVG cross: size matches tab font, strong hover, larger on mobile */
.qwebirc-qui .tabclose svg {
  width: 1em;
  height: 1em;
  min-width: 14px;
  min-height: 14px;
  max-width: 1.2em;
  max-height: 1.2em;
  display: block;
  stroke: #e05c5c;
  stroke-width: 2.2;
  stroke-linecap: round;
  stroke-linejoin: round;
  fill: none;
  pointer-events: none;
  transition: stroke 0.15s, filter 0.15s, box-shadow 0.15s;
  filter: drop-shadow(0 0 2px #0008);
  box-sizing: content-box;
}
.qwebirc-qui .tabclose:hover svg {
  stroke: #ff2d2d;
  filter: drop-shadow(0 0 4px #ff2d2d88);
}
/* Fallback falls SVG aus irgendeinem Grund nicht gerendert wird */
.qwebirc-qui .tabclose:empty:before {
  content: "×";
  font-size: 14px;
  line-height: 1;
  font-weight: 600;
  color: #e05c5c;
}
/* If translation update loses the SVG (short rebuild) */
.qwebirc-qui .tabclose:not(:empty) svg:only-child { visibility: visible; }
/* Aktiver Tab: Close-Button etwas heller */
.qwebirc-qui .tab-selected .tabclose svg {
  stroke: #ff8080;
}
.qwebirc-qui .tab-selected .tabclose:hover svg {
  stroke: #ffaaaa;
}

/* Tab icons for special pane types */
.qwebirc-qui a.tab.tab-has-icon { padding-left: 26px; position: relative; }
.qwebirc-qui a.tab svg.tabicon { position: absolute; left: 6px; width: 14px; height: 14px; top: 50%; transform: translateY(-50%); opacity: 0.85; }
.qwebirc-qui a.tab:hover svg.tabicon { opacity: 1; }
.qwebirc-qui a.tab.tab-selected svg.tabicon { opacity: 1; }
.qwebirc-qui a.tab.tab-icon-options svg.tabicon { /* optional spezifische Farbe */ }
.qwebirc-qui a.tab.tab-icon-embed svg.tabicon { }
.qwebirc-qui a.tab.tab-icon-about svg.tabicon { }

/* Pane (Options / Embed / About) Close Button */
.qwebirc-qui .pane-host { position: relative; }
.qwebirc-qui .pane-close {
  position: absolute;
  top: 6px;
  right: 6px;
  width: 20px;
  height: 20px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  border-radius: 4px;
  background: none;
  color: #e05c5c;
  transition: background 0.15s;
  z-index: 50;
}
.qwebirc-qui .pane-close:hover { background: #2a2d3a; }
.qwebirc-qui .pane-close svg { width: 14px; height: 14px; stroke: currentColor; stroke-width: 2.2; stroke-linecap: round; stroke-linejoin: round; fill: none; filter: drop-shadow(0 0 2px #0008); transition: stroke 0.15s, filter 0.15s; }
.qwebirc-qui .pane-close:hover svg { stroke: #ff2d2d; filter: drop-shadow(0 0 4px #ff2d2d88); }
.qwebirc-qui .pane-close:empty:before { content: "×"; font-size: 16px; font-weight: 600; line-height: 1; }
.qwebirc-qui .tab-selected .pane-close svg { stroke: #ff8080; }
.qwebirc-qui .tab-selected .pane-close:hover svg { stroke: #ffaaaa; }

@media screen and (max-device-width:1024px) {
