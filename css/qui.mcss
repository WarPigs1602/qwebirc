/* Typing Bar Styles */
.qwebirc-qui .qwebirc-typing-bar {
  border: 1px solid #7a6ff0;
  background: #232634;
  padding: 3px 8px;
  margin: 0 0 4px 0;
  font-size: 0.95em;
  color: #7a6ff0;
  min-height: 18px;
  display: none;
  border-radius: 6px;
  transition: background 0.2s, color 0.2s;
  z-index: 20;
}
.qwebirc-qui .qwebirc-typing-bar.active {
  display: block !important;
  background: #2a2d3a;
  color: #b3d4fc;
  position: relative;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dots {
  display: inline-flex;
  align-items: center;
  gap: 2px;
  margin-left: 4px;
  vertical-align: middle;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dot {
  display: inline-block;
  width: 7px;
  height: 7px;
  margin: 0 2px;
  border-radius: 50%;
  background: #7a6ff0;
  opacity: 0.3;
  animation: typing-bounce 1.2s infinite;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dot:nth-child(1) {
  animation-delay: 0s;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}
@keyframes typing-bounce {
  0%, 80%, 100% { opacity: 0.3; transform: translateY(0); }
  40% { opacity: 1; transform: translateY(-5px); }
}
.qwebirc-qui .qwebirc-typing-bar.paused {
  display: block;
  background: #232634;
