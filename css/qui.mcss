/* Emoji Picker Styles */
.qwebirc-qui .emoji-picker-btn {
  position: absolute;
  inset-block-start: 50%; /* top in logical prop */
  inset-inline-start: 8px; /* left */
  transform: translateY(-50%);
  z-index: 10;
  background: none;
  border: none;
  cursor: pointer;
  width: 1.1em;
  height: 1.1em;
  font-size: 1.1em; /* Grundgröße; JS passt dynamisch an */
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border-radius: 6px;
  transition: background 0.15s, transform 0.15s;
}
.qwebirc-qui .emoji-picker-btn:hover {
  background: #232634;
}
.qwebirc-qui .emoji-picker-overlay {
  display: none;
  position: absolute;
  left: 0;
  bottom: 40px;
  z-index: 1000;
  background: #232634;
  border: 1.5px solid #3a3f4b;
  border-radius: 10px;
  box-shadow: 0 4px 24px #0005;
  padding: 10px 10px 6px 10px;
  min-width: 220px;
  max-height: 240px;
  overflow-y: auto;
  color: #e0e0e0;
}
.qwebirc-qui .emoji-picker-overlay button {
  background: none;
  border: none;
  font-size: 1em;
  cursor: pointer;
  border-radius: 5px;
  padding: 2px 5px;
  transition: background 0.15s;
}
.qwebirc-qui .emoji-picker-overlay button:hover {
  background: #3a3f4b;
}
.qwebirc-qui .emoji-picker-overlay .emoji-category-bar {
  display: flex;
  gap: 8px;
  margin-bottom: 8px;
  justify-content: flex-start;
}
.qwebirc-qui .emoji-picker-overlay .emoji-category-bar button {
  font-size: 1em;
  padding: 2px 6px;
  border-radius: 4px;
  background: #232634;
  border: 1.5px solid transparent;
}
.qwebirc-qui .emoji-picker-overlay .emoji-category-bar button.active,
.qwebirc-qui .emoji-picker-overlay .emoji-category-bar button:focus {
  background: #232634;
  /* Sichtbare Schriftfarbe statt Hintergrundfarbe */
  color: #e0e0e0;
  border: 1.5px solid #7a6ff0;
}
.qwebirc-qui .emoji-picker-overlay .emoji-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
}

/* Container muss relativ sein, damit absolute Positionierung des Emoji-Buttons verlässlich funktioniert */
.qwebirc-qui .input { position: relative; }

/* Basis-Left-Padding für Eingabefeld, damit Text nicht unter Button läuft (wird bei Bedarf durch JS dynamisch erhöht) */
.qwebirc-qui .input input.keyboard-input,
.qwebirc-qui .input input.mobile-input { padding-left: 2.4em; }

/* Hover / Active Feedback stärker auf Touch optimieren */
.qwebirc-qui .emoji-picker-btn:active { background:#2d313f; }

/* Mobile spezifische Optimierung: Größerer Button, mehr Touch-Fläche ohne Höhe der Zeile zu verändern */
/* Mobile (nur echte Touch-Geräte) – keine Auslösung bei Desktop-Fenster-Verkleinerung */
@media (pointer: coarse) {
  .qwebirc-qui .emoji-picker-btn {
    font-size: 1.35em; /* größerer sichtbarer Emoji */
    width: 1.35em;
    height: 1.35em;
    inset-inline-start: 10px;
  }
  .qwebirc-qui .input input.keyboard-input,
  .qwebirc-qui .input input.mobile-input { padding-left: 3.2em; }
}

/* Wenn sehr kleine Displays: Button nicht zu groß werden lassen */
@media (pointer: coarse) and (max-width: 480px) {
  .qwebirc-qui .emoji-picker-btn {
    font-size: 1.2em;
    width: 1.2em;
    height: 1.2em;
  }
  .qwebirc-qui .input input.keyboard-input,
  .qwebirc-qui .input input.mobile-input { padding-left: 2.8em; }
}


body {
  margin: 0;
  height: 100%;
  overflow: hidden;
  font-family: Verdana, sans-serif;
  background: #232634;
  color: #e0e0e0;
  line-height: 1.4; /* bessere Lesbarkeit */
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  color-scheme: dark; /* System-Darkmode Unterstützung (Form Controls, Keyboard) */
}

:root { --app-vh: 100vh; }

html {
  overflow: hidden;
  background: #232634;
}

/* Zwei-spaltiges Options-Layout (auto-breite, jetzt links ausgerichtet) */
.qwebirc-optionspane { text-align:left; }
/* Tabelle nicht mehr zentriert (kein margin auto, kein inline-table) */
.qwebirc-optionspane table.qwebirc-options-table { border-collapse:separate; border-spacing:4px 6px; margin:0; width:auto; max-width:100%; }
.qwebirc-optionspane table.qwebirc-options-table .option-row td { padding:4px 10px; }
.qwebirc-optionspane table.qwebirc-options-table .label-cell { text-align:left; white-space:nowrap; font-weight:600; }
.qwebirc-optionspane table.qwebirc-options-table .value-cell { text-align:left; }

/* QUI: About pane should use a darker chrome with lighter text for contrast */
.qwebirc-qui .qwebirc-aboutpane {
  background: #232634;
  color: #eaeef8; /* light text for readability on dark QUI background */
  border: 1.5px solid #3a3f4b;
  border-radius: 10px;
  box-shadow: 0 2px 12px #0004;
}
.qwebirc-qui .qwebirc-aboutpane .mainbody {
  color: #e0e0e0;
}
.qwebirc-optionspane table.qwebirc-options-table label { font-weight:600; }
.qwebirc-optionspane table.qwebirc-options-table .wide-option .label-cell { vertical-align:top; }
.qwebirc-optionspane table.qwebirc-options-table input[type="text"],
.qwebirc-optionspane table.qwebirc-options-table select { max-width:220px; }
.qwebirc-optionspane .qwebirc-options-save, .qwebirc-optionspane .qwebirc-options-cancel { margin-right:8px; }
/* Mobile Fallback: einspaltig */
@media (max-width: 620px) {
  .qwebirc-optionspane table.qwebirc-options-table { display:block; }
  .qwebirc-optionspane table.qwebirc-options-table tr { display:block; }
  .qwebirc-optionspane table.qwebirc-options-table td.options-cell { display:block; width:auto !important; }
}

/* Root IRC UI Container
 * Vereinheitlicht (duplizierte Definitionen entfernt) und modernisiert.
 * Standard Desktop: bisheriges Verhalten (absolute, 100%).
 * Mobile wird weiter unten via Media Query überschrieben (fixed + 100dvh) */
#ircui {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0; /* statt height:100% + width:100% -> robust gegen Elternhöhen */
  width: 100%;
  height: 100%; /* Desktop / Fallback */
  overflow: hidden;
  display: block;
}

/* Hinweis: html Overflow bereits oben definiert – Doppeldefinition entfernt */

/* --- Mobile / Touch Modernisierung --------------------------------------------------
   Ziel: Kein "Anspringen" beim Ein-/Ausblenden der Browser-Adressleiste, komplette
   Sichtbarkeit des Chats (inkl. Input) ohne ungewolltes Scrollen des Body.
   Nutzen von 100dvh (Dynamic Viewport Height) wo verfügbar. */
/* Layout-/Viewport-Anpassungen nur für Touch, nicht für schmale Desktop-Fenster */
@media (pointer: coarse) {
  /* Vereinheitlichte mobile Schriftgrößen (zwischen QUI & ClassicUI abgestimmt)
     Anpassbare Skalierung über Variablen – ermöglicht späteres globales Tuning */
  :root {
  --m-lines: 1.08em;       /* Chat-Zeilen minimal größer */
  --m-ircwindow: 1.02em;   /* Monospace Chat-Inhalte */
  --m-tabbar: 1.3em;       /* Tabs & Nicklist (Tap-Ziel) */
  --m-topic: 1.4em;        /* Topic-Leiste (Heading-Charakter) */
  --m-menu: 1.28em;        /* Dropdown-Menüs / Hints */
  --m-input: 1.5em;        /* Eingabefeld */
  --m-select: 1.35em;      /* Formulareingaben / Selects */
  }
  html, body {
    /* 100dvh vermeidet Sprünge bei mobiler URL-Bar; Fallback: 100vh */
    height: 100vh;
    height: 100dvh;
    min-height: 100dvh;
    overflow: hidden; /* verhindert Body-Scroll, nur interne Bereiche scrollen */
    -webkit-text-size-adjust: 100%;
    padding: 0;
    margin: 0;
  /* Safe-Area (iOS Notch) – constant() veraltet, env() primär */
  padding-bottom: env(safe-area-inset-bottom);
  }

  #ircui {
    position: fixed; /* stabiler Vollbild-Container */
    inset: 0; /* top/right/bottom/left:0 */
    width: 100%;
    /* Dynamische Höhe per JS (visualViewport) -> --app-vh; Fallback 100dvh/100vh */
    height: var(--app-vh, 100dvh);
    max-height: var(--app-vh, 100dvh);
    display: flex; /* Ermöglicht flexibles Aufteilen (Themenleiste, Chat, Input) */
    flex-direction: column;
    overflow: hidden; /* globale Scrollvermeidung */
    touch-action: manipulation;
  }

  /* Scrollbare Chat-Zeilen: eigenes Scrolling, Momentum auf iOS */
  .qwebirc-qui .lines {
    -webkit-overflow-scrolling: touch;
  }

  /* Nickliste auf Mobil evtl. etwas mehr Touch-Komfort (kann später erweitert werden) */
  .qwebirc-qui .nicklist {
    -webkit-overflow-scrolling: touch;
  }

  /* Eingabebereich: Safe-Area berücksichtigen */
  .qwebirc-qui div.input {
    padding-bottom: calc(env(safe-area-inset-bottom) + 4px);
  }

  /* Größere Touch-Flächen optional leicht erhöhen (Tabs etc. bleiben kompakt, Anpassung minimal) */
  .qwebirc-qui a.tab {
    min-height: 30px;
  }

  /* Mobile spezifische Schrift- & Touch-Overrides wurden ans Dateiende verschoben
     (siehe abschließenden Media Query). Hier verbleiben nur Scroll-/Layout-Anpassungen. */
}

/* Zusätzliche Absicherung: wenn Browser 100dvh unterstützt, aber kein Breakpoint greift
   (z.B. Desktop-Browser im Responsive Mode) kann man optional eine Klasse setzen.
   (Nur Doku – Klasse wird hier nicht automatisch gesetzt) */
/*
.supports-dvh #ircui {
