.qwebirc-qui .dynamicpanel {
  position: absolute;
}
.qwebirc-qui .leftboundpanel {
  left: 0px;
  width: 150px;
  height: 100%;
}
.qwebirc-qui .topboundpanel {
  top: 0px;
  width: 100%;
}
.qwebirc-qui .topicboundpanel {
  width: 100%;
}
.qwebirc-qui .rightboundpanel {
  right: 0px;
  width: 140px;
}
.qwebirc-qui .bottomboundpanel {
  bottom: 0px;
  right: 0px;
}

.qwebirc-qui .lines {
  color: $(lines_text);
  overflow: auto;
  background: $(lines_background);
  font-size: 0.8em;
}

.qwebirc-qui .lines a,
.qwebirc-qui .lines a:visited,
.qwebirc-qui .lines a:active {
  color: inherit;
  text-decoration: none;
}
.qwebirc-qui .lines a:hover {
  color: #fff;
  text-decoration: underline;
}

.qwebirc-qui .lines .timestamp {
  display: $(timestamp_display);
}

.qwebirc-qui .ircwindow div {
  font-family: Consolas, "Lucida Console", monospace;
  text-indent: $(timestamp_text_indent);
  padding-left: $(timestamp_padding_left);
  word-wrap: break-word;
}

.qwebirc-qui .tab-invisible {
  display: none;
}

.qwebirc-qui .input input.keyboard-input {
  font-size: 1em;
  height: 1.6em;
  padding-left: 4px;
  padding-top: 2px;
  padding-bottom: 2px;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box; /* verhindert horizontales Überlaufen */
  border: 1.5px solid #3a3f4b;
  border-radius: 6px;
  background: #232634;
  color: #e0e0e0;
  box-shadow: 0 2px 8px #0002;
  outline: none;
  transition: border 0.2s, box-shadow 0.2s;
}
/* Placeholder for input line */
.qwebirc-qui .input input.keyboard-input::placeholder {
  color: #888;
  opacity: 1;
}
/* Focus style for input line */
.qwebirc-qui .input input.keyboard-input:focus {
  border: 1.5px solid #7a6ff0;
  box-shadow: 0 0 0 2px #7a6ff033;
  outline: none;
}

.qwebirc-qui .input-flash {
  background: #232634;
}

.qwebirc-qui .input input.mobile-input {
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  font-size: 1.2em;
  padding: 6px 10px;
  border: 1.5px solid #3a3f4b;
  border-radius: 6px;
  background: #232634;
  color: #e0e0e0;
  box-shadow: 0 2px 8px #0002;
  outline: none;
  margin: 2px 0px 0px 0px;
  transition: border 0.2s, box-shadow 0.2s;
}
/* Placeholder for mobile input line */
.qwebirc-qui .input input.mobile-input::placeholder {
  color: #888;
  opacity: 1;
}
/* Focus style for mobile input line */
.qwebirc-qui .input input.mobile-input:focus {
  border: 1.5px solid #7a6ff0;
  box-shadow: 0 0 0 2px #7a6ff033;
  outline: none;
}

.qwebirc-qui .input input.mobile-button {
  position: absolute;
  top: 0px;
}

.qwebirc-qui form {
  margin: 0px;
  padding: 0px;
}

.qwebirc-qui .topic {
  position: absolute;
  left: 0px;
  top: 0px;
  right: 0px;
  background-color: #232634;
  border-bottom: 1px dashed $(topic_border);
  text-overflow: ellipsis;
}

.qwebirc-qui .topic .emptytopic {
  color: gray;
}

.qwebirc-qui .topic {
  color: #b0b0b0;
  padding-left: 5px;
  padding-bottom: 3px;
  font-size: 0.8em;
  cursor: default;
}

.qwebirc-qui .topic a,
.qwebirc-qui .topic a:visited,
.qwebirc-qui .topic a:active {
  color: inherit;
  text-decoration: none;
}
.qwebirc-qui .topic a:hover {
  color: #fff;
  text-decoration: underline;
}

.qwebirc-qui .outertabbar {
  background: $(tabbar_background);
}

.qwebirc-qui .outertabbar_top .dropdown-tab {
  padding: 4px 3px 0 3px;
}

.qwebirc-qui .outertabbar_left .dropdown-tab {
  padding: 3px 3px 0 3px;
  margin-right: 2px;
}

.qwebirc-qui .outertabbar_left {
  border-right: 1px solid $(tabbar_border);
  overflow: auto;
}

.qwebirc-qui .outertabbar_left .tab {
  display: block;
  margin-right: 3px;
  margin-top: 1px;
  line-height: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  min-height: 15px;
}

.qwebirc-qui .outertabbar_left .tabclose {
  float: right;
  padding-left: 5px;
  margin-left: 0px;
  margin-top: -2px;
  position: relative;
}

.qwebirc-qui .outertabbar_left .tabbar {
  margin-left: 2px;
  flex-direction: column;
  align-items: stretch;
  height: 100%;
  min-height: 0;
  gap: 0;
}

.qwebirc-qui .outertabbar_top {
  border-bottom: 1px solid $(tabbar_border);
}

/* Kompakte, lesbare Tabbar - ohne Rahmen und Schatten */
.qwebirc-qui .tabbar {
  font-size: 0.85em;
  color: $(tabbar_text);
  margin-left: 25px;
  line-height: 22px;
  display: flex;
  gap: 4px;
  align-items: center;
  background: #232634;
  border-radius: 8px;
  box-shadow: none;
  padding: 0 8px 0 8px;
  min-height: 26px;
  height: 26px;
  border: none;
}

/* Kompakte, lesbare Tabs */
.qwebirc-qui a.tab {
  border: 1px solid $(tab_border);
  padding: 2px 10px;
  cursor: pointer;
  border-radius: 6px;
  margin-right: 0;
  white-space: nowrap;
  text-decoration: none;
  color: $(tab_text);
  background: transparent;
  transition: background 0.15s, color 0.15s, border 0.15s, box-shadow 0.15s;
  font-weight: 500;
  font-size: 0.95em;
  box-shadow: 0 1px 2px #0001;
  position: relative;
  outline: none;
  height: 22px;
  display: flex;
  align-items: center;
}

/* Hover effect for tabs */
.qwebirc-qui .tab:hover, .qwebirc-qui a.tab:focus {
  background: #2a2d3a;
  border: 1.5px solid #7a6ff0;
  color: #b3d4fc;
  box-shadow: 0 2px 8px #0003;
}

/* Aktiver Tab */
.qwebirc-qui .tab-selected {
  background: linear-gradient(90deg, #3a3f4b 0%, #232634 100%);
  border: 1.5px solid #7a6ff0;
  border-radius: 8px;
  color: #fff;
  box-shadow: 0 4px 16px #0005;
  font-weight: 600;
  z-index: 2;
  position: relative;
}

.qwebirc-qui div.input {
  border-top: 1px solid $(input_border);
  padding-left: 3px;
  padding-right: 3px;
}

/* Close tab: modern SVG icon instead of X */
/* Close tab: minimalistic, without border and shadow */
.qwebirc-qui .tabclose {
  margin-left: 5px;
  line-height: 1;
  vertical-align: middle;
  padding-left: 3px;
  border-radius: 3px;
  font-weight: normal;
  color: #e05c5c; /* explicit default color for the X */
  width: 18px;
  height: 18px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background: none;
  border: none;
  box-shadow: none;
  transition: background 0.15s;
  position: relative;
  flex: 0 0 auto; /* verhindert Schrumpfen */
}
.qwebirc-qui .tabclose:hover {
  background: #2a2d3a;
}
/* SVG cross: size matches tab font, strong hover, larger on mobile */
.qwebirc-qui .tabclose svg {
  width: 1em;
  height: 1em;
  min-width: 14px;
  min-height: 14px;
  max-width: 1.2em;
  max-height: 1.2em;
  display: block;
  stroke: #e05c5c;
  stroke-width: 2.2;
  stroke-linecap: round;
  stroke-linejoin: round;
  fill: none;
  pointer-events: none;
  transition: stroke 0.15s, filter 0.15s, box-shadow 0.15s;
  filter: drop-shadow(0 0 2px #0008);
  box-sizing: content-box;
}
.qwebirc-qui .tabclose:hover svg {
  stroke: #ff2d2d;
  filter: drop-shadow(0 0 4px #ff2d2d88);
}
/* Fallback falls SVG aus irgendeinem Grund nicht gerendert wird */
.qwebirc-qui .tabclose:empty:before {
  content: "×";
  font-size: 14px;
  line-height: 1;
  font-weight: 600;
  color: #e05c5c;
}
/* If translation update loses the SVG (short rebuild) */
.qwebirc-qui .tabclose:not(:empty) svg:only-child { visibility: visible; }
/* Aktiver Tab: Close-Button etwas heller */
.qwebirc-qui .tab-selected .tabclose svg {
  stroke: #ff8080;
}
.qwebirc-qui .tab-selected .tabclose:hover svg {
  stroke: #ffaaaa;
}

/* Tab icons for special pane types */
.qwebirc-qui a.tab.tab-has-icon { padding-left: 26px; position: relative; }
.qwebirc-qui a.tab svg.tabicon { position: absolute; left: 6px; width: 14px; height: 14px; top: 50%; transform: translateY(-50%); opacity: 0.85; }
.qwebirc-qui a.tab:hover svg.tabicon { opacity: 1; }
.qwebirc-qui a.tab.tab-selected svg.tabicon { opacity: 1; }
.qwebirc-qui a.tab.tab-icon-options svg.tabicon { /* optional spezifische Farbe */ }
.qwebirc-qui a.tab.tab-icon-embed svg.tabicon { }
.qwebirc-qui a.tab.tab-icon-about svg.tabicon { }

/* Pane (Options / Embed / About) Close Button */
.qwebirc-qui .pane-host { position: relative; }
.qwebirc-qui .pane-close {
  position: absolute;
  top: 6px;
  right: 6px;
  width: 20px;
  height: 20px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  border-radius: 4px;
  background: none;
  color: #e05c5c;
  transition: background 0.15s;
  z-index: 50;
}
.qwebirc-qui .pane-close:hover { background: #2a2d3a; }
.qwebirc-qui .pane-close svg { width: 14px; height: 14px; stroke: currentColor; stroke-width: 2.2; stroke-linecap: round; stroke-linejoin: round; fill: none; filter: drop-shadow(0 0 2px #0008); transition: stroke 0.15s, filter 0.15s; }
.qwebirc-qui .pane-close:hover svg { stroke: #ff2d2d; filter: drop-shadow(0 0 4px #ff2d2d88); }
.qwebirc-qui .pane-close:empty:before { content: "×"; font-size: 16px; font-weight: 600; line-height: 1; }
.qwebirc-qui .tab-selected .pane-close svg { stroke: #ff8080; }
.qwebirc-qui .tab-selected .pane-close:hover svg { stroke: #ffaaaa; }

/* Typographie-/Größen-Anpassungen nur für Touch */
@media (pointer: coarse) {
  /* Vollständige mobile QUI Overrides (Größen wie ClassicUI) */
  .qwebirc-qui .lines { font-size: var(--m-lines); }
  .qwebirc-qui .ircwindow div { font-size: var(--m-ircwindow); }
  .qwebirc-qui .tabbar { line-height: 36px; min-height: 40px; height: 40px; font-size: var(--m-tabbar); padding: 0 10px; overflow-x: auto; overflow-y: hidden; flex-wrap: nowrap; -webkit-overflow-scrolling: touch; scrollbar-width: thin; }
  .qwebirc-qui .tabbar::-webkit-scrollbar { height: 6px; }
  .qwebirc-qui .tabbar::-webkit-scrollbar-track { background: transparent; }
  .qwebirc-qui .tabbar::-webkit-scrollbar-thumb { background: #3a3f4b; border-radius: 3px; }
  .qwebirc-qui .nicklist { font-size: var(--m-tabbar); }
  .qwebirc-qui a.tab { padding: 6px 14px; font-size: 1em; min-height: 40px; height: 40px; display: flex; align-items: center; }
  .qwebirc-qui .outertabbar_left .tab { min-height: 40px; }
  .qwebirc-qui .topic { font-size: var(--m-topic); }
  .qwebirc-qui .dropdownmenu a, .qwebirc-qui .dropdownhint { font-size: var(--m-menu); line-height: 1.35; padding: 6px 10px; }
  .qwebirc-qui .input input.keyboard-input { font-size: var(--m-input); padding-top: 6px; padding-bottom: 6px; min-height: 44px; }
  .qwebirc-qui input, .qwebirc-qui select { font-size: var(--m-select); }
  .qwebirc-optionspane table.qwebirc-options-table input[type="text"],
  .qwebirc-optionspane table.qwebirc-options-table select { font-size: var(--m-select); line-height: 1.35; min-height: 42px; }
  .qwebirc-qui .tabclose { width: 30px; height: 30px; min-width: 30px; min-height: 30px; padding: 0; }
  .qwebirc-qui .tabclose svg { width: 24px; height: 24px; stroke-width: 2.6; }
  .qwebirc-qui .dropdown-tab img { width: 160%; }
  .qwebirc-qui .outertabbar_top .dropdown-tab,
  .qwebirc-qui .outertabbar_left .dropdown-tab { padding-right: 13px; }
  .qwebirc-qui input[type="checkbox"], .qwebirc-qui input[type="radio"] { transform: scale(1.5); }
  .qwebirc-qui .qwebirc-optionspane div.hue-slider { height: 14px; }
  .qwebirc-qui .qwebirc-optionspane div.hue-slider .knob { height: 24px; width: 12px; }
  /* Entfernt dekorative pseudo Elemente bei mobilen Close Buttons */
  .qwebirc-qui .tabclose:before,
  .qwebirc-qui .tabclose:after { content: none !important; display: none !important; }
}

.qwebirc-qui a.tab-hilight-activity {
