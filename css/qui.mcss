}

/* Zwei-spaltiges Options-Layout (auto-breite, jetzt links ausgerichtet) */
.qwebirc-optionspane { text-align:left; }
/* Tabelle nicht mehr zentriert (kein margin auto, kein inline-table) */
.qwebirc-optionspane table.qwebirc-options-table { border-collapse:separate; border-spacing:4px 6px; margin:0; width:auto; max-width:100%; }
.qwebirc-optionspane table.qwebirc-options-table .option-row td { padding:4px 10px; }
.qwebirc-optionspane table.qwebirc-options-table .label-cell { text-align:left; white-space:nowrap; font-weight:600; }
.qwebirc-optionspane table.qwebirc-options-table .value-cell { text-align:left; }
.qwebirc-optionspane table.qwebirc-options-table label { font-weight:600; }
.qwebirc-optionspane table.qwebirc-options-table .wide-option .label-cell { vertical-align:top; }
.qwebirc-optionspane table.qwebirc-options-table input[type="text"],
.qwebirc-optionspane table.qwebirc-options-table select { max-width:220px; }
.qwebirc-optionspane .qwebirc-options-save, .qwebirc-optionspane .qwebirc-options-cancel { margin-right:8px; }
/* Mobile Fallback: einspaltig */
@media (max-width: 620px) {
  .qwebirc-optionspane table.qwebirc-options-table { display:block; }
  .qwebirc-optionspane table.qwebirc-options-table tr { display:block; }
  .qwebirc-optionspane table.qwebirc-options-table td.options-cell { display:block; width:auto !important; }
}

