/* Zweiter mobiler Block entfernt – Inhalte in den ersten Media Query integriert */

/* Typing Bar Styles */
.qwebirc-qui .qwebirc-typing-bar {
  border: 1px solid #7a6ff0;
  background: #232634;
  padding: 3px 8px;
  margin: 0 0 4px 0;
  font-size: 0.95em;
  color: #7a6ff0;
  min-height: 18px;
  display: none;
  border-radius: 6px;
  transition: background 0.2s, color 0.2s;
  z-index: 20;
}
.qwebirc-qui .qwebirc-typing-bar.active {
  display: block !important;
  background: #2a2d3a;
  color: #b3d4fc;
  position: relative;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dots {
  display: inline-flex;
  align-items: center;
  gap: 2px;
  margin-left: 4px;
  vertical-align: middle;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dot {
  display: inline-block;
  width: 7px;
  height: 7px;
  margin: 0 2px;
  border-radius: 50%;
  background: #7a6ff0;
  opacity: 0.3;
  animation: typing-bounce 1.2s infinite;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dot:nth-child(1) {
  animation-delay: 0s;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}
.qwebirc-qui .qwebirc-typing-bar .typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}
@keyframes typing-bounce {
  0%, 80%, 100% { opacity: 0.3; transform: translateY(0); }
  40% { opacity: 1; transform: translateY(-5px); }
}
.no-motion .qwebirc-typing-bar .typing-dot { animation: none !important; }
@media (prefers-reduced-motion: reduce) {
  .qwebirc-qui .qwebirc-typing-bar .typing-dot { animation: none; opacity: 0.6; }
}
.qwebirc-qui .qwebirc-typing-bar.paused {
  display: block;
  background: #232634;
  color: #888;
}

.prefix-owner, .prefix-admin, .prefix-op, .prefix-halfop, .prefix-voice, .prefix-unknown, .prefix-none {
  display: inline-block;
  width: 16px;
  text-align: center;
  margin-right: 4px; /* Abstand rechts neben dem Symbol */
}
.prefix-none {
  width: 16px;
  margin-right: 4px;
  /* Kein Symbol anzeigen, Platz bleibt leer */
}
/* --- Touch-Optimierte Dropdown-Menüs (nur echte Touch-/Großzeiger-Geräte) --- */
@media (pointer: coarse) {
  /* Größere Klick-/Tapflächen für Accessibility (>= 48px Höhe empfohlen) */
  .qwebirc-qui .dropdownmenu { min-width: 180px; }
  .qwebirc-qui .dropdownmenu a,
  .dropdownmenu a { /* global Fallback */
    font-size: calc(var(--m-menu, 1.28em) * 1.1);
    padding: 10px 18px;
    line-height: 1.4;
    min-height: 48px; /* ausreichende Touch-Zielgröße */
  }
  /* Hamburger / Dropdown-Tab Icon etwas größer für Finger */
  .qwebirc-qui .dropdown-tab img { width: 180%; max-width: 32px; }
  .qwebirc-qui .dropdown-tab { width: 32px; }
  /* Hint-Tooltip größer lesbar falls eingeblendet */
  .qwebirc-qui .dropdownhint { font-size: calc(var(--m-menu, 1.28em) * 1.05); }
}

/* Mobile Verkleinerung der Chat-Ausgabe speziell für Touch (allgemein kleiner gewünscht) */
@media (pointer: coarse) {
  /* Etwas größere mobile Chat-Schrift (vorher 0.75 / 0.9) */
  :root { --m-lines: 0.9em; --m-ircwindow: 1em; }
  .qwebirc-qui .lines { font-size: var(--m-lines); }
  .qwebirc-qui .ircwindow div { font-size: var(--m-ircwindow); }
}